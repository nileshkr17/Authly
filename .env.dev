# Development Environment Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3001

# SQLite Database for Development
DB_TYPE=sqlite
DB_DATABASE=authly_dev.db

# JWT Configuration
JWT_SECRET=dev-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=1h
JWT_REFRESH_SECRET=dev-super-secret-refresh-jwt-key-change-this-in-production
JWT_REFRESH_EXPIRATION=7d

# OAuth - Google (Development placeholders)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/oauth/google/callback

# OAuth - GitHub (Development placeholders)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/oauth/github/callback

# Magic Link Configuration
MAGIC_LINK_SECRET=dev-magic-link-secret-key-change-this-in-production
MAGIC_LINK_EXPIRATION=15m

# Email Configuration (Development mode - will show tokens in console)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@authly.com
